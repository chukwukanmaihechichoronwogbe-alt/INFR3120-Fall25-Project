<%- include('../partials/header') %>

<% if (reviews && reviews.length > 0) { %>
    <table class="data-table">
    <thead>
        <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Rating</th>
        <th>Date Read</th>
        <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% reviews.forEach(function(review) { %>
        <tr>
            <td><%= review.title %></td>
            <td><%= review.author %></td>
            <td><%= review.rating %>/5</td>
            <td><%= review.dateRead ? review.dateRead.toDateString() : 'N/A' %></td>
            <td>
                <a href="/reviews/<%= review._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                |
                <form action="/reviews/<%= review._id %>/delete"
                        method="POST"
                        style="display:inline;">
                    <button type="delete" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
    </table>
<% } else { %>
    <div class="empty-state text-center py-5">
    <p class="lead text-muted mb-3">No reviews found.</p>
    <a href="/reviews/add" class="btn btn-primary btn-lg">Add New Review!</a>
    </div>
<% } %>

<%- include('../partials/footer') %>
